<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="TRACE" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4d [%t] %-5p %c %x\n\t%m%n" />
		</layout>
	</appender>

	<appender name="stdoutwarn" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4d [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>

	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="slotmachine-trigger.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="Append" value="true" />
		<param name="Threshold" value="TRACE" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>

    <logger name="org.jboss.resteasy">
        <level value="INFO" />
    </logger>

	<logger name="org.apache.struts2">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<logger name="com.opensymphony.xwork2">
		<level value="info" />
	</logger>
	
	<logger name="com.opensymphony.sitemesh">
	   <level value="info" />
	</logger>

    <logger name="org.zkoss">
        <level value="info" />
    </logger>

    <logger name="org.apache.felix">
        <level value="info" />
    </logger>

	<logger name="de.pogosystems">
		<level value="DEBUG" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>
	
	<logger name="org.hibernate.SQL">
	   <level value="INFO"/>
	</logger>
	
	<logger name="org.twitter4j">
	   <level value="INFO"/>
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="fileAppender" />
	</root>

</log4j:configuration>